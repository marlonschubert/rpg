{{#each error}}
 <div class="d-flex justify-content-center alert alert-danger">{{text}}</div>
{{/each}}
<h3>Add Rarity :</h3>
<form action="/admin/rarity/new" method= "POST">
  <div class="card">
    <div class="card-body">
      <label for="name">Name:</label>
      <br>
      <input type="name" maxlength="15" name="name" value="{{name}}" required="true">
      <br>
      <button type="submit" class="btn btn-success mt-4"> Add rarity </button>
      <a href="/admin/rarity"><button type="button" class="btn btn-secondary mt-4">Close</button></a>
    </div>
  </div>
</form>
