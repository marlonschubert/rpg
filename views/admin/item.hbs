{{#each error}}
  <p>{{text : }}</p>
{{/each}}

<div class="d-flex justify-content-between">
  <h2>List Items </h2>
  <a  href="/admin/item/add"><button class="btn btn-success" >New Item</button></a>
</div>
  <form id="submitFormDel" action="/admin/item/del" method="POST">
  <hr>
  <div class="card d-flex justify-content-center">
    <div class="card-body ">
      <table class="table table-striped table-bordered" >
      <thead>
          <tr class="mt-6">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Rarity</th>
            <th class="d-flex justify-content-end"scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>
                {{#each items}}
         <tr>
            <td>
                <input type="checkbox" id="checkbox" name="checkbox" value="{{id}}">
            </td>
            <td><strong>{{name}}</strong></td>
            <td><strong>{{price}}</strong></td>
            <td >{{category.name}}</td>
            <td>{{rarity.name}}</td>
            <td><a class="d-flex justify-content-end" href="/admin/item/edit/{{id}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path></svg>
                </a>
              </td>
              </th>
            </tr>
                    {{else}}
                    <h4 class="mt-4">Has no registered rarity !</h4>
                    {{/each}}
        </tbody>
        </table>
        <div class="d-flex justify-content-end p-2">
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Delete
          </button>
          <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"    aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel">Realy delete? </h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Really want to delete these Items?!
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" data-bs-target="#submitFormDel"  class="btn btn-danger">Delete</button>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</form>
